	20  kneut = 10^(-5.81) * exp(-23.5e3/8.314 * (1/TK-1/298.15))
	29  P_CO2 = SR("CO2(g)")
	30  kbase = 10^(-3.48) * exp(-35.4e3/8.314 * (1/TK-1/298.15)) * P_CO2^1.0
